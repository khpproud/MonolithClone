<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Monolith.Footer" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/button_enabled</item>
    </style>

    <style name="Widget.Monolith.Status" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingTop">@dimen/gap_tiny</item>
        <item name="android:paddingBottom">@dimen/gap_tiny</item>
        <item name="android:paddingStart">@dimen/gap_small</item>
        <item name="android:paddingEnd">@dimen/gap_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?attr/textAppearanceCaption</item>
    </style>
</resources>